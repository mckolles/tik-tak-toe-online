
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameStatus {
  idle 
  inProgress
  gameOver
  gameOverDraw
}
model Game {
  id    String   @id @default(cuid())
  status GameStatus
  players User[] @relation("games")
  winner User?   @relation(fields: [winnerId], references: [id])
  winnerId String?
  gameOverAt String?
}

model User { 
  id    String   @id @default(cuid())
  login  String
  rating Int
  passwordHash String
  games Game[] @relation("games")
  winnerGames Game[] 
}
 